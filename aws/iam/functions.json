{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBDataAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:BatchGetItem",
                "dynamodb:BatchWriteItem"
            ],
            "Resource": [
                "arn:aws:dynamodb:ap-south-1:961341520772:table/Supers-Posts",
                "arn:aws:dynamodb:ap-south-1:961341520772:table/Supers-Posts/index/*"
            ]
        },
        {
            "Sid": "S3DataAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:GetObjectAcl",
                "s3:PutObjectAcl",
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::supers-*",
                "arn:aws:s3:::supers-*/*"
            ]
        },
        {
            "Sid": "CloudWatchLogsRuntime",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:GetLogEvents",
                "logs:FilterLogEvents"
            ],
            "Resource": "arn:aws:logs:ap-south-1:961341520772:log-group:/aws/lambda/supers-*:*"
        }
    ]
}